<?xml version="1.0"?>
<robot name="dh_robotics_gripper">
  <!-- DH Robotics AG-95 Parallel Gripper URDF -->
  <!-- Based on DH-Robotics-gripper.stl mesh -->

  <!-- Base link (connects to robot flange) -->
  <link name="gripper_base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="DH-Robotics-gripper.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gripper_gray">
        <color rgba="0.4 0.4 0.4 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.04 0.10"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Left finger link -->
  <link name="left_finger_link">
    <visual>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.008 0.04"/>
      </geometry>
      <material name="finger_dark">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.008 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Right finger link -->
  <link name="right_finger_link">
    <visual>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.008 0.04"/>
      </geometry>
      <material name="finger_dark">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.008 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Left finger joint (prismatic - sliding) -->
  <joint name="left_finger_joint" type="prismatic">
    <parent link="gripper_base_link"/>
    <child link="left_finger_link"/>
    <origin xyz="0 0.02 -0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.0475" effort="45" velocity="0.1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Right finger joint (prismatic - mirrored) -->
  <joint name="right_finger_joint" type="prismatic">
    <parent link="gripper_base_link"/>
    <child link="right_finger_link"/>
    <origin xyz="0 -0.02 -0.08" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="0.0" upper="0.0475" effort="45" velocity="0.1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- DH AG-95 Specifications -->
  <!-- Stroke: 95mm total (47.5mm per finger) -->
  <!-- Max Force: 45N per finger -->
  <!-- Position Resolution: 0.1mm -->
</robot>
